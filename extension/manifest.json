{
  "name": "WorkOrSocialNetworks",
  "author": "Dmytro Vasin <dmytro.vasin@gmail.com>",
  "manifest_version": 2,
  "version": "0.0.8",
  "description": "Extention to review sites that user visit.",
  "homepage_url": "https://github.com/DmytroVasin/WorkOrSocialNetworks",
  "options_page": "options.html",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_icon":  "icon/icon-48.png",
    "default_title": "Work Or Social Networks",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon/icon-16.png",
    "48": "icon/icon-48.png",
    "128": "icon/icon-128.png"
  },
  "content_security_policy": "script-src 'self' https://*.firebaseio.com 'unsafe-eval'; object-src 'self'"
}
